<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ipl.calculatrice.CalculatriceActivity"
    tools:showIn="@layout/activity_calculatrice">

    <TextView
        android:layout_width="332dp"
        android:layout_height="54dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textViewResultat"
        android:layout_marginTop="0dp"
        android:textSize="32dp"
        android:gravity="right"
        />

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultat"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buttonC"
                android:text="C"
                android:tag="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onReset"
                />

            <Button
                android:id="@+id/buttonCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CE"
                android:tag="CE"
                />

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:tag="Back"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:tag="+"
                android:onClick="onOperateur"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button7"
                android:text="7"
                android:tag="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:tag="8"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:tag="9"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/buttonDiviser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:tag="/"
                android:onClick="onOperateur"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button4"
                android:text="4"
                android:tag="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:tag="5"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:tag="6"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/buttonFois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:tag="*"
                android:onClick="onOperateur"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button1"
                android:text="1"
                android:tag="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:tag="2"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:tag="3"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/buttonMoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:tag="-"
                android:onClick="onOperateur"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/button0"
                android:text="0"
                android:tag="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onChiffre"/>

            <Button
                android:id="@+id/buttonVirgule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:onClick="onVirgule"/>

            <Button
                android:id="@+id/buttonEgal"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:onClick="onEgal"
                />



        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
